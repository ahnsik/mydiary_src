<html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">

  <title>혈압기록</title>

	<link rel="stylesheet" href="src/css/vanilla-calendar-min.css">
	<script src="src/js/vanilla-calendar-min.js"></script>

	<style type="text/css">
  @media ( min-width: 1024px ) {
		body {
			background: #88C;
		}
	}
	</style>

	<script>
	Date.prototype.yyyymmdd = function() 	{
	    var yyyy = this.getFullYear().toString();
	    var mm = (this.getMonth() + 1).toString();
	    var dd = this.getDate().toString();
	    return yyyy + (mm[1] ? mm : '0'+mm[0]) + (dd[1] ? dd : '0'+dd[0]);
	}
	</script>

</head>

<body>
  <div id="calendar">
    <h1>Calendar</h1>
		<div id="myCalendar" class="vanilla-calendar">
      <ul>
        <% for (var i=0; i< db.length; i++) { %>
          <li> <a href="./diary?date=<%=db[i].date.toLocaleString()%>"> date: <%=db[i].date.toLocaleString()%>, memo: <%=db[i].memo%> ::: <%=db[i].date.getTime()%> </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
  <div id="diary_form">
    <form method="post" action="new_diary">
			<ul>
				<li>  <textarea name="memo" rows="4" id="memo">오늘은..</textarea> </li>
				<li>	<input type="submit" class="submit" name="action" value="기록저장" />
				</li>
			</ul>
		</form>
  </div>

  <script>
	let myCalendar = new VanillaCalendar({
    selector: "#myCalendar"
	})
	</script>
</body>

</html>
